{% extends 'public/base_public.html.twig' %}
{% block title %} Easy Recyclage - Catalogue{% endblock %}
{% block breadcrumb_title %}
    {{ 'Public.Catalog.BreadcrumbTitle'| trans({}, "messages", locale) }}
{% endblock %}

{% block breadcrumb_content %}
    {{ 'Public.Catalog.BreadcrumbContent'| trans({}, "messages", locale) }}
{% endblock %}
{% block main_content %}
    <section class="page-section">
        <div class="container catalog-ponctual">
            <div class="row">
                <div class="col-md-12">
                    <h1>{{ 'Public.Catalog.Title'| trans({}, "messages", locale) }}
                    </h1>
                    <div class="divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    {% for range in ranges %}
                        <div class="range-container">
                            <h2><a data-toggle="collapse"
                                   href="#rangeProductCollapse__{{ range.id }}" class="title">{{ range|rangeLabelTranslation(locale) }}</a>
                            </h2>
                            <div id="rangeContentContainer__{{ range.id }}">
                                <div class="row m-b-15 m-t-1">
                                    <div class="col-md-1 range__image">
                                        <img src="{% if range.pictures|length > 0 %}{{ asset('/uploads/pictos/' ~ range.pictures[0].path) }}{% endif %}"
                                             alt="#" class="">
                                    </div>
                                    <div class="col-md-11">
                                        <p>{{ range|rangeLabelTranslation(locale,'shortDescription') }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="row product-container collapse multi-collapse"
                                 id="rangeProductCollapse__{{ range.id }}">
                                {% for product in range.products %}
                                    <div class="col-md-6 product" id="productContainer_{{ product.id }}">
                                        <div class="row product__block">

                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <h2 class="color-secondary mb-1 product__title text-center">{{ product|productLabelTranslation(locale) }}</h2>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xl-3 paprec-flex align-items_center">
                                                    <div class="product__image">
                                                        <img src="{% if product.pilotPictures|length > 0 %}{{ asset('/uploads/pictos/' ~ product.pilotPictures[0].path) }}{% endif %}"
                                                             alt="#" class="">
                                                    </div>
                                                </div>
                                                <div class="col-xl-9">

                                                    <div class="product__description">
                                                        <div class="paprec-flex space-between">
                                                            <div class="m-b-12">{{ product|productLabelTranslation(locale,'shortDescription') }}</div>
                                                        </div>
                                                        <div class="paprec-flex space-between">
                                                            <div class="product__label">{{ 'Catalog.Product.Capacity'|trans({}, "messages", app.request.locale) }}
                                                                :
                                                            </div>
                                                            <div class="product__value">{{ product.capacity }} {{ product.capacityUnit }}</div>
                                                        </div>
                                                        <div class="paprec-flex space-between">
                                                            <div class="product__label">{{ 'Catalog.Product.Dimensions'|trans({}, "messages", app.request.locale) }}
                                                                :
                                                            </div>
                                                            <div class="product__value">{{ product.dimensions }}</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="product__quantity paprec-flex">
                                                        <div class="product__label">{{ 'Public.Catalog.Quantity'|trans({}, "messages", locale) }}
                                                            :
                                                        </div>
                                                        <div class="paprec-flex product__quantity__container">
                                                            {% set qtty = '' %}
                                                            {% for item in cart.content %}
                                                                {% if item['pId'] == product.id %}
                                                                    {% set qtty = item['qtty'] %}
                                                                {% endif %}
                                                            {% endfor %}
                                                            <div class="paprec-flex">
                                                                <button class="removeOneToCartButton round-btn round-btn--blue mr-2 {% if qtty == 0 %}round-btn--disable{% endif %}"
                                                                        id="removeOneToCartButton{{ product.id }}"
                                                                        data-url="{{ path('paprec_public_catalog_removeOneContent', {locale: locale, cartUuid: cart.id, productId: product.id}) }}">
                                                                    <i class="fas fa-minus"></i>
                                                                </button>
                                                                <select name=""
                                                                        disabled="disabled"
                                                                        class="quantityProductSelect"
                                                                        data-url="{{ path('paprec_public_catalog_addContent', {locale: locale, cartUuid: cart.id}) }}"
                                                                        data-product="{{ product.id }}"
                                                                        id="quantityProductSelect_{{ product.id }}">
                                                                    {% for i in 0..100 %}
                                                                        {% if i == qtty %}
                                                                            <option value="{{ i }}"
                                                                                    selected="selected">{{ i }}</option>''
                                                                        {% else %}
                                                                            <option value="{{ i }}">{{ i }}</option>
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                </select>
                                                                <button class="addOneToCartButton round-btn round-btn--blue ml-2"
                                                                        id="addOneToCartButton{{ product.id }}"
                                                                        data-url="{{ path('paprec_public_catalog_addOneContent', {locale: locale, cartUuid: cart.id, productId: product.id}) }}">
                                                                    <i class="fas fa-plus"></i>
                                                                </button>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="col-lg-4">
                    <div class="cart">
                        <div class="cart__block">
                            <div class="cart__block__body">
                                <div class="top">
                                    <div class="flex-1">
                                        <div class="m-b-20">
                                            <h2 class="font-weight-bold">{{ 'Public.Catalog.Quote'| trans({}, "messages", locale) }}</h2>
                                        </div>
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="devis devis__recap devis-recap">
                                                    {% for range in ranges %}
                                                        {% for product in range.products %}
                                                            {% for item in cart.content %}
                                                                {% if item['pId'] == product.id %}
                                                                    <div class="devis__recap__item devis-recap-item-{{ product.id }} mb-2">
                                                                        <div class="d-flex flex-row">
                                                                            <div class="number">
                                                                                {{ item['qtty'] }}
                                                                            </div>
                                                                            <div class="product d-flex align-items-center">
                                                                                {{ product|productLabelTranslation(locale) }}
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                {% endif %}
                                                            {% endfor %}
                                                        {% endfor %}
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="bottom">
                                    <div class="text-center">
                                        <div class="need-help mb-2">BESOIN DE CONSEIL OU D'ACCOMPAGNEMENT?</div>
                                        <div><a class="link" href="{{ path('paprec_public_contact_request_index', {locale: locale}) }}">CLIQUEZ ICI</a> POUR VOUS FAIRE ACCOMPAGNER ET AFFINER
                                            VOTRE SOLUTION
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-5 d-flex justify-content-between bottom-navigation">
                <div>
                    <a type="button"
                       class="btn btn__green btn__large type__button arrow-left ml-5"
                       href="{{ path('paprec_public_devis_index', {locale: locale}) }}">{{ 'Public.Catalog.Previous-step'| trans({}, "messages", locale)|upper }}
                    </a>
                </div>
                <div class="be-recalled">
                    <a type="button"
                       class="btn btn__purple-2 btn__large type__button ml-5"
                       href="{{ path('paprec_public_contact_request_index', {locale: locale}) }}"><i class="fas fa-phone-alt"></i> {{ 'Public.Catalog.ToBeCall'| trans({}, "messages", locale)|upper }}
                    </a>
                </div>

                <div>
                    <a type="button"
                       class="btn btn__green btn__large type__button arrow-right mr-5 catalog_next_step_button"
                       data-url="{{ path('paprec_public_contact_regulier_index', {locale: locale, cartUuid: cart.id}) }}"
                       data-ajax="{{ path('paprec_public_catalog_addFrequency', {locale: locale, cartUuid: cart.id}) }}">{{ 'Public.Catalog.Next-step'| trans({}, "messages", locale)|upper }}
                    </a>
                </div>
            </div>
        </div>
    </section>
    <div id="define-need-button"
         class="floating-bottom-button">{{ 'Public.Catalog.Define-Need'| trans({}, "messages", locale) }}</div>
    <div id="other-needs-button"
         class="floating-bottom-button">{{ 'Public.Catalog.Other-Needs'| trans({}, "messages", locale) }}</div>
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            $('.progress-bar').css('width', '38%').attr('aria-valuenow', '33%');

            $(window).scroll(function () {
                var Bottom = $(window).height() + $(window).scrollTop() >= $(document).height();
                if (Bottom) {
                    $('.showHide').fadeOut();
                } else {
                    $('.showHide').fadeIn();
                }
            });
        });

    </script>
{% endblock %}
