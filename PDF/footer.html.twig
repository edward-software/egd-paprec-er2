<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//FR"
        "http://www.w3.org/TR/html4/strict.dtd">
<html>

<meta charset="utf-8">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

<style type="text/css">

    html,
    body {
        margin: 0;
        padding: 0;
        font-family: "Red Hat Display", sans-serif;
        font-weight: 500;
        font-size: 14px;
        color: #4a4a4a;
    }

    .footer__container {
        width: 800px;
        margin: auto;
        border-top: 2px solid #004a8e;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .footer__container p {
        padding: 0;
        margin: 0;
    }

</style>

<body>

<div class="footer__container">
    {% if agency %}
        <p>{{ agency.businessName }}</p>
        <p>{{ agency.address }} - {{ agency.postalCode }} {{ agency.city }}</p>
        <p>{{ 'Commercial.PDF.Footer.PhoneNumberTitle'|trans({}, "messages", app.request.locale) }} : {{ agency.phoneNumber }}
            - {{ 'Commercial.PDF.Footer.FaxTitle'|trans({}, "messages", app.request.locale) }} : {{ agency.faxNumber }}</p>
        <p style="font-size: 12px">{{ agency.legalInfoTemplate }}</p>
    {% endif %}
</div>
</body>

</html>
