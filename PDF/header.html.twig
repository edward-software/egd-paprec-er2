<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//FR"
        "http://www.w3.org/TR/html4/strict.dtd">
<html>

<style type="text/css">

    * {
        box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

    .offer__container {
        width: 800px;
        margin: auto;
        position: relative;
        padding-top: 40px;
    }

    .offer__header {
        padding-bottom: 30px;
        text-align: left;
    }

</style>

<body>

<div class="offer__container">

    <div class="offer__header">
        {% if agency and agency.pilotPictures %}
            {% for picture in agency.pilotPictures %}
                <img src="{{ absolute_url(asset('/uploads/pictos/' ~ picture.path)) }}"
                     style="width: 300px;">
            {% endfor %}
        {% endif %}
    </div>

</div>

</body>

</html>
