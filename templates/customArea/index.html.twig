{% extends "base_admin.html.twig" %}

{% block title %}
    {{ 'Catalog.CustomArea.CustomAreas'|trans }}
{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block content_title %}
    {{ 'Catalog.CustomArea.CustomAreas'|trans }}
{% endblock %}

{% block main_content %}
    <div class="row">
        <div class="col-md-12">
            <!-- BOX -->
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fa fa-xs fa-list"></i> {{ 'Catalog.CustomArea.List'|trans }}
                    </h4>
                    <div class="float-right">
                        <a href="{{ path('paprec_custom_area_add') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fa fa-xs fa-plus"></i> {{ 'Catalog.CustomArea.Add'|trans }}
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <table id="customAreasListDatatable" class="table table-striped table-bordered table-hover"
                           cellpadding="0" cellspacing="0" border="0" width="100%">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'Catalog.CustomArea.Code'|trans }}</th>
                            <th>{{ 'Catalog.CustomArea.IsDisplayed'|trans }}</th>
                            <th>{{ 'Catalog.CustomArea.Language'|trans }}</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
            <!-- /BOX -->
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script>
        $(function () {

            $('#customAreasListDatatable').EgdDatatable({
                url: "{{ path('paprec_custom_area_loadList') }}",
                columns: [
                    {"data": "id"},
                    {"data": "code"},
                    {"data": "isDisplayed"},
                    {"data": "language"},
                    {"data": "id", "width": "10%", "bSortable": false, "className": "cell-action-button"}
                ],
                rowDblclick: {
                    type: 'open',
                    url: "{{ path('paprec_custom_area_view', {id: '__rowId__'}) }}"
                },
                buttons: [
                    {
                        label: '{{ "General.Remove"|trans }}',
                        type: 'ajaxMany',
                        url: "{{ path("paprec_custom_area_removeMany", {ids: '__rowIds__', json: 1}) }}",
                        confirmMessage: "{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn-sm'
                    }
                ],
                rowButtons: [
                    {
                        label: "{{ 'General.View'|trans }}",
                        className: "btn btn-primary btn-sm",
                        icon: "fa fa-eye",
                        url: "{{ path('paprec_custom_area_view', {id: '__rowId__'}) }}"
                    },
                    {
                        label: "{{ 'General.Edit'|trans }}",
                        className: "btn btn-warning btn-sm",
                        icon: "fa fa-edit",
                        url: "{{ path('paprec_custom_area_edit', {id: '__rowId__'}) }}"
                    },
                    {
                        label: '{{ "General.Remove"|trans }}',
                        type: 'ajax',
                        url: "{{ path("paprec_custom_area_removeMany", {ids: '__rowId__', json: 1}) }}",
                        confirmMessage: "<span class='confirm-remove-style'>{{ 'General.Confirm'|trans|e('js') }}</span><br>{{ 'General.Confirm-remove'|trans|e('js') }}",
                        className: 'btn btn-danger btn-sm',
                        icon: "fa fa-times"
                    }

                ]
            });

        });
    </script>
{% endblock %}
