<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//FR"
        "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
    <title>PDF Paprec Offer</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <style type="text/css">
        html,
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            font-weight: 500;
            font-size: 14px;
            color: #4a4a4a;
        }

        * {
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        h1 {
            color: #004a8e;
            font-size: 20px;
            font-weight: 900;
            margin: 0;
            width: 70%;
        }

        h2 {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 10px;
            margin-top: 20px;
            border-bottom: 1px solid #4a4a4a;
        }

        p {
            margin: 5px 0;
        }

        hr {
            border: 1px dashed #d8d8d8;
            width: 200px;
            height: 1px;
            margin: 8px 20px 0 20px;
        }

        .bold {
            font-weight: bold;
        }

        .text-left {
            text-align: left;
        }

        .text-right {
            text-align: right;
        }

        .offer__container {
            width: 800px;
            /*height: 1280px;*/
            margin: auto;
            /*margin-bottom: 50px;*/
            position: relative;
        }

        /* FLEXBOX */

        .flex {
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: -moz-box;
            /*display: box;*/
            display: flex;
        }

        .align-item-center {
            -webkit-box-align: center;
            -moz-box-align: center;
            -ms-flex-align: center;
            -webkit-align-items: center;
            box-align: center;
            align-items: center;
        }

        .align-item-end {
            -webkit-box-align: end;
            -moz-box-align: end;
            -ms-flex-align: end;
            -webkit-align-items: end;
            box-align: end;
            align-items: flex-end;
        }

        .justify-center {
            -webkit-box-pack: center;
            box-pack: center;
            justify-content: center;
        }

        .justify-end {
            -webkit-box-pack: end;
            box-pack: end;
            justify-content: flex-end;
        }

        .space-between {
            -webkit-box-pack: justify;
            box-pack: justify;
            justify-content: space-between;
        }

        .w50 {
            width: 50%;
        }

        .mb-14 {
            margin-bottom: 14px;
        }

        .mb-20 {
            margin-bottom: 20px;
        }

        .mb-30 {
            margin-bottom: 30px;
        }

        .mb-40 {
            margin-bottom: 40px;
        }

        /***** PAGE OFFRE *****/

        /*header*/

        .offer__header {
            padding-bottom: 20px;
            text-align: right;
        }

        /*Title*/

        .offer__title {
            border-bottom: 2px solid #004a8e;
        }

        .offer__title__ref {
            border-top: 2px solid #004a8e;
            border-right: 2px solid #004a8e;
            border-left: 2px solid #004a8e;
            margin: 0;
            padding: 2px 5px 0 5px;
            color: #f00f0f;
            font-size: 20px;
            text-transform: uppercase;
            font-weight: 900;
        }

        /*content*/

        .offer__content {
            padding: 0 0 30px 0;
        }

        .offer__ref-items > div:first-child {
            width: 70%;
        }

        .offer__ref-items > div:last-child {
            width: 30%;
            padding-right: 15px;
        }

        table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            margin-bottom: 20px;
        }

        table p {
            margin: 0;
        }

        table td, table th {
            font-size: 13px;
            overflow: hidden;
            word-break: normal;
            text-align: center;
            border: 1px solid #004a8e;
            border-right: 0px;
            border-bottom: 0px;
            height: 22px;
        }

        table th {
            padding: 5px 10px;
            vertical-align: top;
        }

        table td {
            padding: 2px 5px;
        }

        table span {
            font-weight: normal;
        }

        table tr:last-child > td {
            border-bottom: 1px solid #004a8e;
        }

        table tr > td:last-child, table tr > th:last-child {
            border-right: 1px solid #004a8e;
        }

        table .table-header td {
            padding: 0;
            border-top: 0;
        }

        table .table-footer1 td:nth-child(n+2):nth-child(-n+3) {
            border-left: 0;
        }

        table .table-footer1 td:last-child {
            border-left: 0;
        }

        table .table-footer1 td:nth-child(n+5):nth-child(-n+7) {
            border-bottom: 1px solid #004a8e;
        }

        table .table-footer1 td {
            padding: 2px 0;
        }

        table .table-footer2 td:nth-child(n+2):nth-child(-n+3) {
            border-left: 0;
        }

        table .table-footer2 td:nth-child(-n+4) {
            border-top: 0;
        }

        table .table-footer2 td:last-child {
            border-right: 0;
        }

        table .table-footer2 td {
            padding: 0 0 2px 0;
        }

        table .empty {
            height: 15px;
        }

        table .empty td:last-child {
            border-left: 0 !important;
            border-right: 0 !important;
        }

        .check {
            display: inline-block;
            width: 10px;
            height: 10px;
            outline: 2px solid grey;
            margin-left: 5px;
        }

        .check.active {
            border: 2px solid white;
            outline: 2px solid grey;
            background-color: black;
        }

        .offer__signature > div {
            width: 48%;
        }

        /* simple-table */

        table.simple-table tr:not(:first-child) td {
            border-top: 0 !important;
        }

        table.simple-table td {
            padding: 2px 5px;
        }

        table.simple-table tr td:first-child {
            width: 250px;
            padding-right: 30px;
        }

        table.simple-table tr td:nth-child(2) {
            width: 150px;
            border-left: 0;
        }

        table.simple-table tr td:nth-child(3) {
            width: 100px;
        }

        /*footer*/
        .offer__footer {
            padding-top: 20px;
            border-top: 3px solid #004a8e;
            /*position: absolute;*/
            /*bottom: 0;*/
            margin-top: 10px;
            width: 100%;
        }

    </style>

</head>
<body>
<div class="offer__container">
    <div class="offer__header">
        <img src="{{ absolute_url(asset('build/static/logo-privacia.png')) }}" alt="logo Privacia"
             style="width: 300px;">
    </div>

    <div class="offer__title flex space-between">
        <h1>Contrat de Location et de Prestations</h1>
        <p class="offer__title__ref">{{ quoteRequest.reference }}</p>
    </div>

    <div class="offer__content">

    </div>
</div>

</body>
</html>
