{% extends 'public/base_public.html.twig' %}
{% block gtm %}
{% endblock %}
{% block title %} Easy Recyclage - Confirmation{% endblock %}
{% block breadcrumb_title %}
    {{ 'Public.Confirm.BreadcrumbTitle'| trans({}, "messages", locale) }}
{% endblock %}
{% block breadcrumb_content %} {{ 'Public.Confirm.BreadcrumbContent'| trans({}, "messages", locale) }} {% endblock %}

{% block main_content %}
    <section class="page-section confirmation confirm-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-xs-12">
                    <div class="row">
                        <div class="col-12">
                            <h1>
                                {{ 'Public.Confirm.Title'| trans({}, "messages", locale) }}
                            </h1>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="confirm-text">
                                <p>{{ 'Public.Confirm.Message-1'| trans({}, "messages", locale) }}</p>
                                <p>{{ 'Public.Confirm.Message-2'| trans({}, "messages", locale) }}</p>
                                {% if quoteRequest.userInCharge %}
                                    <p>{{ 'Public.Confirm.Message-3'| trans({}, "messages", locale) }} {{ quoteRequest.userInCharge.civility }} {{ quoteRequest.userInCharge.firstName }} {{ quoteRequest.userInCharge.lastName }} {{ 'Public.Confirm.Message-5'| trans({}, "messages", locale) }}</p>
                                    <p>{{ 'Public.Confirm.Message-6'| trans({}, "messages", locale) }}</p>
                                {% endif %}
                                <p>{{ 'Public.Confirm.Message-4'| trans({}, "messages", locale) }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-none d-lg-block col-lg-6 text-center">
                    <img src="{{ asset('build/static/firework.png') }}" alt="">
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('.progress-bar').css('width', '100%').attr('aria-valuenow', '100%');
        });

    </script>
{% endblock %}

